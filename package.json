{
  "name": "refinery-js",
  "version": "0.4.8",
  "description": "Flux graph based implementation.",
  "repository": "https://github.com/Platane/refinery",
  "files": [
    "dist/",
    "lib/"
  ],
  "dependencies": {},
  "devDependencies": {
    "expect": "^1.8.0",
    "mocha": "2.5",
    "nyc": "6.4",
    "coveralls": "2.11",
    "webpack": "1.x",
    "babel-loader": "6.x",
    "babel-core": "6.x",
    "babel-cli": "6.x",
    "babel-register": "^6.0.0",
    "babel-preset-es2015": "6.x",
    "babel-preset-stage-1": "6.x"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "babel --out-dir ./lib ./src",
    "bundle": "env NODE_ENV=\"development\" webpack",
    "bundle:min": "env NODE_ENV=\"production\" webpack",
    "prepublish": "npm run build & npm run bundle & npm run bundle:min",
    "test": "env NODE_ENV=\"test\" mocha --compilers js:babel-register  --timeout 200 test/index.js",
    "test:coverage": "nyc --require babel-register mocha test/index.js",
    "test:watch": "npm test -- --watch --bail",
    "test:debug": "npm test -- --debug-brk",
    "coverage:report": "nyc report --reporter=text-lcov | coveralls"
  }
}
