{
    "name"        : "refinery-js",
    "version"     : "0.5.1",
    "description" : "Flux graph based implementation.",
    "repository"  : "https://github.com/platane/refinery",

    "files": [
        "dist/",
        "lib/"
    ],

    "dependencies": {},

    "devDependencies": {
        "expect"                : "~1.20.2",
        "mocha"                 : "~3.1.0",
        "nyc"                   : "~8.3.1",
        "coveralls"             : "~2.11",
        "gitbook-cli"           : "~2.3.0",
        "webpack"               : "~1.13.2",
        "webpack-dev-server"    : "~1.16.2",
        "file-loader"           : "~0.9.0",
        "style-loader"          : "~0.13.0",
        "css-loader"            : "~0.25.0",
        "raw-loader"            : "~0.5.1",
        "babel-loader"          : "~6.2.5",
        "babel-register"        : "~6.16.3",
        "babel-core"            : "~6.17.0",
        "babel-cli"             : "~6.16.0",
        "babel-preset-es2015"   : "~6.16.0",
        "babel-preset-stage-1"  : "~6.16.0"
    },

    "main": "lib/index.js",

    "scripts": {

        "build"                 : "babel --out-dir ./lib ./src",
        "bundle"                : "env NODE_ENV=\"development\" webpack",
        "bundle:min"            : "env NODE_ENV=\"production\" webpack",
        "prepublish"            : "npm run build & npm run bundle & npm run bundle:min",

        "test"                  : "env NODE_ENV=\"test\" mocha --compilers js:babel-register  --timeout 200 test/spec/index.js",
        "test:coverage"         : "nyc --require babel-register mocha test/spec/index.js",
        "test:browser"          : "webpack-dev-server --port 8084 --content-base ./ --config ./webpack.config.test.js -d ",

        "coverage:report"       : "nyc report --reporter=text-lcov | coveralls",

        "docs:prepare"          : "gitbook install",
        "docs:build"            : "npm run docs:prepare && gitbook build",
        "docs:watch"            : "npm run docs:prepare && gitbook serve"
    }
}
